.container {
  font-size: 14rpx;
  line-height: 24rpx;
}
.status_bar {
  height: 25px;
  background-color: #1296db;
  width: 100%;
}
.topbar {
  background-color: #1296db;
}
.topbar .pos {
  width: 20%;
  padding: 5rpx 5rpx;
}
.search {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 80%;
  border: 2rpx solid #1296db;
  border-radius: 30rpx;
  margin-left: 10%;
}
.search .searchbox {
  font-size: 40rpx;
  height: 70rpx;
  padding-left: 30rpx;
}
.strategy-item {
  margin: 10rpx;
  background-color: #fff;
  height: 300rpx;
  box-shadow: 0 0 5px #9d9d9d;
  border-radius: 10rpx;
  display: flex;
}
.strategy-item .left_img {
  height: 300rpx;
  width: 400rpx;
}
.strategy-item .left_img .recommend_img {
  height: 300rpx;
  width: 400rpx;
  font-size: 50rpx;
  font-weight: bolder;
  text-align: center;
  line-height: 300rpx;
  color: grey;
}
.strategy-item .middle_other {
  text-align: center;
  margin-top: 30rpx;
}
.strategy-item .middle_other .name {
  font-weight: bolder;
  font-size: 40rpx;
}
.strategy-item .middle_other .desc {
  height: 170rpx;
  padding: 15rpx 15rpx;
}

