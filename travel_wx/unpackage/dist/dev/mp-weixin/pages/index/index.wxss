.container {
  font-size: 14rpx;
  line-height: 24rpx;
}
.status_bar {
  height: 25px;
  background-color: #1296db;
  width: 100%;
}
.topbar {
  background-color: #1296db;
}
.topbar .pos {
  width: 20%;
  padding: 5rpx 5rpx;
}
.search {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 80%;
  border: 2rpx solid #1296db;
  border-radius: 30rpx;
  margin-left: 10%;
}
.search .searchbox {
  font-size: 40rpx;
  height: 70rpx;
  padding-left: 30rpx;
}
.top_box {
  height: 300rpx;
  background-color: #E3F2FD;
  text-align: center;
  display: flex;
  justify-content: space-around;
}
.top_box .classify {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin-top: 60rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 40rpx;
  background-color: white;
}
.top_box .classify .icon {
  height: 150rpx;
  width: 150rpx;
}
.top_box .classify .text {
  font-size: 30rpx;
}
.fire {
  font-size: 30rpx;
  color: #ff557f;
  height: 80rpx;
  line-height: 80rpx;
}
.recommend-item {
  margin: 10rpx;
  background-color: #fff;
  height: 300rpx;
  box-shadow: 0 0 5px #9d9d9d;
  border-radius: 10rpx;
  display: flex;
}
.recommend-item .left_img {
  height: 300rpx;
  width: 400rpx;
}
.recommend-item .left_img .recommend_img {
  height: 300rpx;
  width: 400rpx;
  font-size: 50rpx;
  font-weight: bolder;
  text-align: center;
  line-height: 300rpx;
  color: grey;
}
.recommend-item .middle_other {
  text-align: center;
  margin-top: 30rpx;
}
.recommend-item .middle_other .name {
  font-weight: bolder;
  font-size: 40rpx;
  line-height: 40rpx;
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.recommend-item .middle_other .desc {
  height: 170rpx;
  padding: 5rpx 15rpx;
}
.recommend-item .mark_img {
  height: 80rpx;
  width: 80rpx;
  line-height: 100rpx;
  border: 1px solid grey;
  box-shadow: 0 0 5px #9d9d9d;
  border-radius: 30%;
  margin-top: 110rpx;
}
.popup-content {
  height: 300rpx;
  width: 600rpx;
}
.popup-content .ratetext {
  font-size: 30rpx;
  color: #1296db;
  text-align: center;
  padding: 50rpx 0;
  padding-bottom: 30rpx;
}
.popup-content .rate {
  margin: 0 150rpx;
  margin-bottom: 30rpx;
}
.popup-content button {
  margin: 0 30rpx;
  color: #fff;
  background-color: #1296db;
}
.bottom-tarbar {
  padding-bottom: 0px;
}

